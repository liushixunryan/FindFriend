<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register.PerfectthreeActivity">

    <RelativeLayout
        android:id="@+id/headtoolbat"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="#8A2BE2">


        <ImageView
            android:onClick="onback"
            android:src="@drawable/fanhui"
            android:layout_alignParentLeft="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="完善资料(3/7)"
            android:textColor="#ffffff"
            android:textSize="22dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tupian"
        android:layout_below="@+id/headtoolbat"
        android:background="#ff00ff"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:text="此处应该有图"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fragment"
        android:layout_below="@+id/tupian"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/nian_tv"
            android:gravity="center"
            android:text="年"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/yue_tv"
            android:gravity="center"
            android:text="月"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/ri_tv"
            android:gravity="center"
            android:text="日"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp" />
    </LinearLayout>

    <FrameLayout
        android:layout_below="@id/fragment"
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </FrameLayout>

</RelativeLayout>