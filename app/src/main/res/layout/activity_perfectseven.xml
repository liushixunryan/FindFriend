<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register.PerfectsevenActivity">
    <RelativeLayout
        android:id="@+id/headtoolbat"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="#8A2BE2">


        <ImageView
            android:onClick="onback"
            android:src="@drawable/fanhui"
            android:layout_alignParentLeft="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="完善资料(7/7)"
            android:textColor="#ffffff"
            android:textSize="22dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tupian"
        android:layout_below="@+id/headtoolbat"
        android:background="#ff00ff"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:text="此处应该有图"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tupian"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:onClick="Intent_seven"
            android:layout_marginTop="10dp"
            android:text="3000元以下"
            android:id="@+id/gz1"
            android:background="@drawable/xueli"
            android:layout_width="350dp"
            android:layout_height="60dp" />

        <Button
            android:id="@+id/gz2"
            android:onClick="Intent_seven1"
            android:layout_marginTop="10dp"
            android:text="3001-5000元"
            android:background="@drawable/xueli"
            android:layout_width="350dp"
            android:layout_height="60dp" />


        <Button
            android:id="@+id/gz3"
            android:onClick="Intent_seven2"
            android:layout_marginTop="10dp"
            android:text="5001-8000元"
            android:background="@drawable/xueli"
            android:layout_width="350dp"
            android:layout_height="60dp" />


        <Button
            android:id="@+id/gz4"

            android:layout_marginTop="10dp"
            android:text="8001-12000元"
            android:onClick="Intent_seven3"
            android:background="@drawable/xueli"
            android:layout_width="350dp"
            android:layout_height="60dp" />


        <Button
            android:id="@+id/gz5"
            android:layout_marginTop="10dp"
            android:text="12001-20000元"
            android:onClick="Intent_seven4"
            android:background="@drawable/xueli"
            android:layout_width="350dp"
            android:layout_height="60dp" />


        <Button
            android:id="@+id/gz6"
            android:layout_marginTop="10dp"
            android:text="20001-50000元"
            android:background="@drawable/xueli"
            android:layout_width="350dp"
            android:onClick="Intent_seven5"
            android:layout_height="60dp" />


        <Button
            android:id="@+id/gz7"
            android:onClick="Intent_seven6"
            android:layout_marginTop="10dp"
            android:text="50000元以上"
            android:background="@drawable/xueli"
            android:layout_width="350dp"
            android:layout_height="60dp" />




    </LinearLayout>

</RelativeLayout>