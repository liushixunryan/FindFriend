<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register.PerfectfourActivity">

    <RelativeLayout
        android:id="@+id/headtoolbat"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@drawable/navigationbar">


        <ImageView
            android:layout_marginLeft="30px"
            android:onClick="onback"
            android:src="@drawable/fanhui"
            android:layout_alignParentLeft="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true" />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="完善资料(4/7)"
            android:textColor="#ffffff"
            android:textSize="22dp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tupian"
        android:layout_below="@+id/headtoolbat"
        android:background="@drawable/height_banner"
        android:layout_width="match_parent"
        android:layout_height="120dp">
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/tupian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/shengao_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</RelativeLayout>